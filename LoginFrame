import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

class LoginFrame extends JFrame {
    public LoginFrame() {
        setTitle("Movie Ticket Booking - Login");
        setSize(400, 300);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLayout(new GridLayout(3, 1));

        JButton adminButton = new JButton("Admin Login");
        JButton customerButton = new JButton("Customer Login");

        adminButton.addActionListener(e -> {
            showAdminPasswordDialog();
        });

        customerButton.addActionListener(e -> {
            String phone = getValidatedPhoneNumber("Enter Phone Number:");
            if (phone != null) {
                new CustomerFrame(phone);
                dispose();
            }
        });

        add(new JLabel("Select Login Type:", SwingConstants.CENTER));
        add(adminButton);
        add(customerButton);

        setVisible(true);
    }

    private void showAdminPasswordDialog() {
        JDialog dialog = new JDialog(this, "Admin Login", true);
        dialog.setSize(300, 150);
        dialog.setLayout(new BorderLayout());

        JPanel panel = new JPanel(new GridBagLayout());
        GridBagConstraints gbc = new GridBagConstraints();
        gbc.insets = new Insets(5, 5, 5, 5);

        gbc.gridx = 0; gbc.gridy = 0;
        panel.add(new JLabel("Password:"), gbc);

        JPasswordField passwordField = new JPasswordField(15);
        gbc.gridx = 1;
        panel.add(passwordField, gbc);

        JCheckBox showPassword = new JCheckBox("Show Password");
        showPassword.addActionListener(e -> {
            if (showPassword.isSelected()) {
                passwordField.setEchoChar((char) 0);
            } else {
                passwordField.setEchoChar('*');
            }
        });
        gbc.gridx = 0; gbc.gridy = 1; gbc.gridwidth = 2;
        panel.add(showPassword, gbc);

        JButton okButton = new JButton("OK");
        okButton.addActionListener(e -> {
            String password = new String(passwordField.getPassword());
            if ("Admin@123".equals(password)) {
                new AdminFrame();
                dispose();
                dialog.dispose();
            } else {
                JOptionPane.showMessageDialog(dialog, "Invalid Password");
            }
        });
        gbc.gridx = 0; gbc.gridy = 2; gbc.gridwidth = 2;
        panel.add(okButton, gbc);

        dialog.add(panel, BorderLayout.CENTER);
        dialog.setVisible(true);
    }

    private String getValidatedPhoneNumber(String message) {
        while (true) {
            String phone = JOptionPane.showInputDialog(message);
            if (phone == null) return null; // Cancelled
            if (phone.matches("\\d{10}")) {
                return phone;
            } else {
                JOptionPane.showMessageDialog(this, "Phone number must be exactly 10 digits.");
            }
        }
    }
}
